<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.singleGame.SingleGame">

    <data>
        <variable
            name="viewmodel"
            type="com.vango.tictactoe.ui.singleGame.SingleGameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers"
            android:shadowColor="@color/black"
            android:shadowDx="1.8"
            android:shadowDy="1.5"
            android:shadowRadius="10"
            android:text="@string/tic_tac_toe"
            android:textAllCaps="true"
            android:textColor="@color/secondary"
            android:textSize="70sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        <View-->
        <!--            android:layout_width="0dp"-->
        <!--            app:layout_editor_absoluteY="250dp"-->
        <!--            android:layout_height="9dp"-->
        <!--            android:elevation="20dp"-->
        <!--            android:background="@color/black"-->
        <!--            app:layout_constraintEnd_toEndOf="@id/guidelineRight"-->

        <!--            app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>-->
        <GridLayout
            android:id="@+id/board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/boardColor"
            android:columnCount="3"
            android:rowCount="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:onClick="@{viewmodel.boardOnClick}"
                android:src="@drawable/empty"
                android:tag="0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:onClick="@{viewmodel.boardOnClick}"
                android:src="@drawable/empty"
                android:tag="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:onClick="@{viewmodel.boardOnClick}"
                android:src="@drawable/empty"
                android:tag="2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:onClick="@{viewmodel.boardOnClick}"
                android:src="@drawable/empty"
                android:tag="3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:onClick="@{viewmodel.boardOnClick}"
                android:src="@drawable/empty"
                android:tag="4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:onClick="@{viewmodel.boardOnClick}"
                android:src="@drawable/empty"
                android:tag="5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:onClick="@{viewmodel.boardOnClick}"
                android:src="@drawable/empty"
                android:tag="6" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:onClick="@{viewmodel.boardOnClick}"
                android:src="@drawable/empty"
                android:tag="7" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:onClick="@{viewmodel.boardOnClick}"
                android:src="@drawable/empty"
                android:tag="8" />

        </GridLayout>

        <Button
            android:id="@+id/buttonRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/secondary"
            android:fontFamily="@font/roboto"
            android:text="@string/restart"
            android:textSize="19sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>